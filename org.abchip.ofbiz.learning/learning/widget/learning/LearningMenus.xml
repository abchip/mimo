				<if-compare field="parameters.show" operator="not-equals"
					value="widgets" />
			</condition>
			<link target="ConditionalScreen">
				<parameter param-name="show" value="widgets" />
			</link>
		</menu-item>
		<menu-item name="showFailWidgets" title="Show fail-widgets">
			<condition>
