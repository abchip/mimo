<?xml version="1.0" encoding="UTF-8" ?>

<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/services.xsd">
	<description>Learning Component Services</description>

	<service name="learningSelectQuestion" engine="java"
		location="org.abchip.ofbiz.learning.LearningServices" invoke="selectQuestion">
		<description>Select Learning Question</description>
		<attribute name="Survey" type="org.ofbiz.entity.GenericValue"
			mode="INOUT" optional="true" />
		<attribute name="question" type="String" mode="OUT"
			optional="true" />
	</service>

	<service name="learningProcessQuestion" engine="java"
		location="org.abchip.ofbiz.learning.LearningServices" invoke="processQuestion">
		<description>Process Learning Question</description>
		<attribute name="Survey" type="org.ofbiz.entity.GenericValue"
			mode="INOUT" optional="true" />		
		<attribute name="question" type="String" mode="IN" optional="false" />
		<attribute name="answer" type="String" mode="IN" optional="false" />
		<attribute name="score" type="Integer" mode="OUT" optional="true" />
	</service>
</services>
