<?xml version="1.0" encoding="UTF-8" ?>

<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/services.xsd">
	<description>Test Component Services</description>

	<service name="testInterface" engine="interface">
		<description>Interface to describe base parameters for Test Services</description>
		<attribute name="firstName" type="String" mode="IN"
			optional="false" />
		<attribute name="lastName" type="String" mode="IN" optional="false" />
		<attribute name="planetId" type="String" mode="IN" optional="false" />
		<attribute name="fullName" type="String" mode="OUT"
			optional="true" />
	</service>

	<service name="testFirstService" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="handleParameters">
		<description>Our First Service</description>
		<attribute name="firstName" type="String" mode="IN"
			optional="true" />
		<attribute name="lastName" type="String" mode="IN" optional="true" />
		<attribute name="planetId" type="String" mode="IN" optional="true" />
		<attribute name="fullName" type="String" mode="INOUT"
			optional="true" />
	</service>

	<service name="testServiceWithAuth" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="serviceWithAuth">
		<description>Service with some security-related codes</description>
	</service>

	<service name="testCallingServiceOne" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="callingServiceOne">
		<description>First Service Called From The Controller</description>
		<implements service="testInterface" />
		<attribute name="planetId" type="String" mode="IN" optional="false" />
	</service>

	<service name="testCallingServiceOneWithPermission" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="callingServiceOne">
		<description>First Service Called From The Controller</description>
		<required-permissions join-type="OR">
			<check-permission permission="LEARN_VIEW" />
		</required-permissions>
		<implements service="testInterface" />
		<attribute name="planetId" type="String" mode="IN" optional="false" />
	</service>

	<service name="testCallingServiceTwo" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="callingServiceTwo">
		<description>Second Service Called From Service One</description>
		<attribute name="planetId" type="String" mode="IN" optional="false" />
	</service>

	<service name="testCallingServiceECA" engine="java"
		location="org.abchip.ofbiz.test.TestServices" invoke="callingServiceECA">
		<description>ECA Service Called From Service One</description>
		<attribute name="entityInstance" type="org.apache.ofbiz.entity.GenericValue"
			mode="IN" optional="true" />
	</service>

</services>
