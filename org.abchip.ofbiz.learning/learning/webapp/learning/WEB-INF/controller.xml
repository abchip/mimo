<?xml version="1.0" encoding="UTF-8"?>

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://ofbiz.apache.org/Site-Conf"
	xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">

	<include location="component://common/webcommon/WEB-INF/common-controller.xml" />
	<include location="component://commonext/webapp/WEB-INF/controller.xml" />

	<description>ABChip OFBiz Learning Configuration</description>

	<request-map uri="main">
		<security https="true" auth="true" />
		<response name="success" type="view" value="MainScreen" />
	</request-map>
	<request-map uri="Learning">
		<security https="true" auth="true" />
		<response name="success" type="view" value="LearningScreen" />
	</request-map>
	<request-map uri="Entity">
		<security https="true" auth="true" />
		<response name="success" type="view" value="EntityScreen" />
	</request-map>
	<request-map uri="QuestionForm">
		<security https="true" auth="true" />
		<response name="success" type="view" value="QuestionFormScreen" />
	</request-map>	
	<request-map uri="LearningToBe">
		<response name="success" type="request-redirect"
			value="../../webtools/control/SearchLabels">
			<redirect-parameter name="labelFileName" value="LearningToBePhrases.xml" />
			<redirect-parameter name="searchLabels" value="Find" />
		</response>
	</request-map>
	<request-map uri="EditContactMech">
		<security https="true" auth="true" />
		<response name="success" type="request-redirect"
			value="../../partymgr/control/viewprofile">
			<redirect-parameter name="partyId" value="10000" />
		</response>
	</request-map>
	<request-map uri="EditEntity">
		<security https="true" auth="true" />
		<response name="success" type="request-redirect"
			value="../../webtools/control/entitymaint">
			<redirect-parameter name="filterByGroupName"
				value="org.abchip.ofbiz.test" />
		</response>
	</request-map>
	<request-map uri="ShowPlanetManyRelation">
		<security https="true" auth="true" />
		<response name="success" type="view" value="ShowPlanetManyRelation" />
	</request-map>
	<request-map uri="processQuestionForm">
        <event type="service" invoke="learningProcessQuestion"/>
		<response name="success" type="view-last" />	
	</request-map>		

	<view-map name="MainScreen" type="screen"
		page="component://learning/widget/learning/LearningScreens.xml#MainScreen" />
	<view-map name="LearningScreen" type="screen"
		page="component://learning/widget/learning/LearningScreens.xml#LearningScreen" />
	<view-map name="QuestionFormScreen" type="screen"
		page="component://learning/widget/learning/LearningScreens.xml#QuestionFormScreen" />		
	<view-map name="EntityScreen" type="screen"
		page="component://learning/widget/learning/LearningScreens.xml#EntityScreen" />
	<view-map name="ShowPlanetManyRelation" type="screen"
		page="component://learning/widget/learning/LearningScreens.xml#ShowPlanetManyRelation" />
</site-conf>
